/* pages/rank/rank.wxss */
.contain{
  padding: 0 30rpx;
}
.nav{
  display: block;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 32rpx;
    text-align: left;
    justify-content: space-between;
}
.ranklist{
  padding: 10rpx 0;
  box-shadow:1px 0px 8px #ededed;
}
.line-one{
  display: block;
  padding: 10rpx;
  margin: 16rpx 0;
  height: 80rpx;
  color: #282828;
  box-shadow:1px 0px 8px #ededed;
}
.l-img{
  display: inline-block;
  float: left;
}
.l-img image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 100rpx;
}
.hd{
  position: relative;
  top: -40rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 100rpx;
}
.name{
   display: inline-block;
   float: left;
  padding: 20rpx;
  font-size: 30rpx;
}
.signday{
   display: inline-block;
   float: right;
   padding: 20rpx;
   font-size: 30rpx;
}
.iterm{
  display: block;
  height: 180rpx;
  margin: 30rpx 0;
  padding: 20rpx 0;
}
.grid-3{
  display: block;

  width: 100%;
  margin: 15rpx 0;
  text-align: center;
}
.grid-iterm{
  display: inline-block;
  width: 30%;
  margin: 4rpx;
  height: 150rpx;
  background-color: #FFF;
  background-image: url('https://milfun.fun/mp/weixinapp/images/it1.jpg');
  background-size:100%;
  border-radius: 10rpx;
  box-shadow:1px 0px 8px #ededed;
}
.grid-iterm:nth-child(1){
  float: left;
}
.grid-iterm:nth-child(3){
   float: right;
}
.num{
  position: relative;
  top: -50rpx;
  font-size: 30rpx;
  color: #bbbbbb;
}
.desc{
  position: relative;
  top: -36rpx;
  font-size:24rpx;
  color: #282828;
  width: 200rpx;
}








