/**lessonlist.wxss**/
.contain{
  padding: 0 30rpx;
}
.clear{
  height: 10rpx;
}
.nav{
  display: block;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 32rpx;
    text-align: left;
    justify-content: space-between;
}
.title{
  display: inline-block;
    width: 30%;
    float: left; 
    color:#d0d0d0;
    font-weight: 200;
}
.list{
  display: block;
}
.card{
  height: 180rpx;
    padding: 20rpx;
    margin: 20rpx 0;
   /* background-color: #f4ea2a;*/
    border-radius: 10rpx;
    box-shadow:1px 1px 8px #ededed;
}
.l-tittle{
  padding: 10rpx 0;
  font-size: 28rpx;
}
.d-title{
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #d0d0d0;

}
.r-info{
  font-size: 24rpx;
  padding: 10rpx 0;
  color: #d0d0d0;
}






/******** swiper ******/
.swiper-tab{
  display: block;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 32rpx;
    text-align: center;
    justify-content: space-between;
}
.swiper-tab-item{
  display: inline-block;
    width: 30%;
    float: left; 
    color:#d0d0d0;
}
.active{
  color:#f4ea2a9;
  border-bottom: 4rpx solid #f4ea2a;
}

