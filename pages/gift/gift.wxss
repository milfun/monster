/* pages/gift/gift.wxss */
.contain{
  padding: 0 30rpx;
}
.nav{
  display: block;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 32rpx;
    text-align: left;
    justify-content: space-between;
}
.giftlist{
  display: block;
  height: auto;
  width: 100%;
  padding: 10rpx 0;
  box-shadow:1px 0px 8px #ededed;
}
.line-one{
  display: inline-block;
  float: left;
  height: 380rpx;
  width: 45%;
  padding: 0 12rpx;
  margin: 10rpx 5rpx;
  color: #282828;
  box-shadow:1px 0px 8px #ededed;
}
.l-img{
  display: block;
  clear: both;
}
.l-img image{
  height: 200rpx;
  width: 100%;

}
.hd{
  position: relative;
  top: -40rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 100rpx;
}
.name{
   display: inline-block;
   float: left;
  padding: 20rpx;
  font-size: 30rpx;
}
.line-two{
  display: block;
  position: relative;
  top: -50rpx;
  height: 180rpx;
  width: 100%;
  padding: 10rpx 20rpx;
}
.i-name{
  display: inline-block;
  font-size: 28rpx;
  width: 350rpx;
  color: #282828;
}
.i-desc{
  
  font-size: 24rpx;
  color: #bbbbbb;
  padding: 10rpx 0;
}
.i-num{
  font-size: 24rpx;
  color: #bbbbbb;
}

.i-day{
   display: inline-block;
   position: relative;
   top: -50rpx;
   float: right;
   font-size: 24rpx;
   padding: 5rpx 10rpx;
   color: #FFF;
   background-color: rgb(0, 0, 0,0.8);
   border-radius: 10rpx;
   
}