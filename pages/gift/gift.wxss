/* pages/gift/gift.wxss */
.contain{
  padding: 0 30rpx;
}
.nav{
  display: block;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 32rpx;
    text-align: left;
    justify-content: space-between;
}
.giftlist{
  padding: 10rpx 0;
  box-shadow:1px 0px 8px #ededed;
}
.line-one{
  display: block;
  padding: 10rpx;
  margin: 16rpx 0;
  height: 80rpx;
  color: #282828;
  box-shadow:1px 0px 8px #ededed;
}
.l-img{
  display: inline-block;
  float: left;
}
.l-img image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 100rpx;
}
.hd{
  position: relative;
  top: -40rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 100rpx;
}
.name{
   display: inline-block;
   float: left;
  padding: 20rpx;
  font-size: 30rpx;
}
.signday{
   display: inline-block;
   float: right;
   padding: 20rpx;
   font-size: 30rpx;
}